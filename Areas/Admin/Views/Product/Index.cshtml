@using GreenGardens.Models
@model List<Product>
<div class="container">
    <div class="row pt-5 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-database-add"></i> Add Product
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
       
        <th>
            Product Name
        </th>
        <th>
            SKU
        </th>
        <th>
            Manufacturer
        </th>
        <th>
            Price
        </th>
        <th>
            Category
        </th>
        
        
    </tr>
    </thead>
    <tbody>
       
        @foreach(var obj in Model.OrderBy(u=>u.SKU)){
    <tr>
        
        <td>@obj.Name</td>
        <td>@obj.SKU</td>
        <td>@obj.Manufacturer</td>
        <td>@obj.ListPrice</td>
        <td>@obj.CategoryId</td>

        <td>
            <div class="w-75 btn-group" role="group">
                
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                <i class="bi bi-trash3e"></i> Delete
                </a>
            </div>
                
        </td>
    </tr>
        }
    </tbody>

    
</table>
</div>
