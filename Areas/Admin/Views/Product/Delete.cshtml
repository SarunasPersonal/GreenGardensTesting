@using GreenGardens.Models
@model Product
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Name"  class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" disabled class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="text" class="form-control" />
            <span asp-validation-for="Description" disabled class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SKU" class="p-0"></label>
            <input asp-for="SKU" type="text" class="form-control" />
            <span asp-validation-for="SKU" disabled class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-0"></label>
            <input asp-for="ListPrice" type="number" class="form-control" />
            <span asp-validation-for="ListPrice" disabled class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" type="number" class="form-control" />
            <span asp-validation-for="Price" disabled class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price50" class="p-0"></label>
            <input asp-for="Price50" type="number" class="form-control" />
            <span asp-validation-for="Price50" disabled class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price100" class="p-0"></label>
            <input asp-for="Price100" type="number" class="form-control" />
            <span asp-validation-for="Price100" disabled class="text-danger"></span>
        </div>
        
        


        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Remove</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>


            </div>

        </div>
    </div>




    </div>
</form>
